{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "sourceMap": true,
        "emitDecoratorMetadata":true,
        "experimentalDecorators": true,
        "lib": ["dom", "es7"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}